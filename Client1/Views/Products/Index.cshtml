
@{
    ViewData["Title"] = "Index";
}
@model List<Product>
<h1>Products</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th>@product.Id</th>
                <th>@product.Name</th>
                <th>@product.Price</th>
                <th>@product.Stock</th>
            </tr>
        }
    </tbody>
</table>
